<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#45000000">


    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoPT"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="20dp"
            app:srcCompat="@drawable/castelo_de_leiria" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Space
                android:layout_width="154dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btn_removerFavoritos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_remove_favoritos"
                android:backgroundTint="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNomePT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tvTipoMonumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8FFFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivRanking"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_favoritos" />

            <TextView
                android:id="@+id/tvRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



